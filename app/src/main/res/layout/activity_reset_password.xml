<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="100dp"
    tools:context="com.ICS499.ThrownException.DigitalFileCabinet.ResetPasswordActivity">

    <TextView
        android:id="@+id/resetFirstNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/prompt_firstName"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/restFirstNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:hint="@string/prompt_firstName"
        android:autofillHints="@string/prompt_firstName"
        android:background="@drawable/edit_round"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/resetLastNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/prompt_lastName"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/restLastNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:hint="@string/prompt_lastName"
        android:autofillHints="@string/prompt_lastName"
        android:background="@drawable/edit_round"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="25dp">

        <Button
            android:id="@+id/nextButton"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:text="@string/NEXT"
            android:background="@drawable/button_round"/>

    </LinearLayout>

</LinearLayout>